{
  "name": "<%= appName %>",
  "version": "0.0.0",
  "repository": "<%= repositoryLink %>",
  "engines": {
    "node": ">=5.2.x"
  },
  "license": "MIT",
  "bugs": {
    "url": "<%= repositoryLink %>/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.2.1",
    "glob": "^7.0.5",
    "gulp-mocha": "^2.1.3",
    "jsonwebtoken": "^5.0.5",
    "koa": "1.2.1",
    "koa-bodyparser": "^2.0.0",
    "koa-compose": "^2.3.0",
    "koa-cors": "0.0.16",
    "koa-error": "^1.1.3",
    "koa-morgan": "^0.3.0",
    "koa-request": "^1.0.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "^5.1.2",
    "koa-sequelize-transaction": "0.0.1",
    "koa-trace": "^1.0.0",
    "path": "^0.11.14",
    "mysql2": "^1.0.0-rc.11",
    "querystring": "^0.2.0",
    "scandir": "^0.1.2",
    "sequelize": "4.0.0-1",
    "node-env-file": "^0.1.7",
    "winston": "^1.1.1"
  },
  "devDependencies": {
    "assert": "^1.3.0",
    "co": "^4.6.0",
    "co-supertest": "0.0.10",
    "babel-eslint": "^6.0.2",
    "eslint": "^2.1.0",
    "eslint-config-google": "^0.5.0",
    "gulp-eslint": "^2.0.0",
    "expect": "^1.9.0",
    "gulp": "^3.9.0",
    "gulp-jscs": "^2.0.0",
    "gulp-jscs-stylish": "^1.2.1",
    "gulp-jshint": "^2.0.0",
    "gulp-mocha-co": "^0.4.1-co.3",
    "isparta": "^4.0.0",
    "jshint": "^2.8.0",
    "minimist": "^1.2.0",
    "mocha": "^2.3.4",
    "mocha-steps": "1.0.1",
    "nodemon": "^1.7.1",
    "sequelize-cli": "2.4.0",
    "should": "^7.1.0",
    "supertest": "^1.1.0",
<% if (useSwagger) { -%>
    "swagger-jsdoc": "^1.2.1",
    "swagger-koa": "^1.0.8",
    "swagger-ui": "^2.1.2",
<% } -%>
    "wrench": "^1.5.8"
  },
  "jscsConfig": {
    "present": "google"
  },
  "jshintConfig": {
    "asi": true,
    "bitwise": true,
    "curly": true,
    "camelCase": true,
    "egegeg": true,
    "esnext": true,
    "globals": {
      "app": true,
      "before": true,
      "co": true,
      "expect": true,
      "promise": true,
      "request": true,
      "server": true
    },
    "indent": 2,
    "immed": true,
    "latedef": false,
    "laxcomma": true,
    "newcap": true,
    "noarg": true,
    "noyield": true,
    "node": true,
    "quotmark": "single",
    "strict": "global",
    "undef": true,
    "unused": true,
    "validthis": true
  },
  "scripts": {
    "migrate": "npm run sequelize db:migrate",
    "migrate-seed": "npm run migrate && npm run seed:all",
    "seed": "npm run sequelize db:seed",
    "seed:all": "npm run sequelize db:seed:all",
    "sequelize": "./node_modules/.bin/sequelize",
    "smokeTest": "PROJECT_ROOT=$PWD gulp smokeTest",
    "start": "NODE_ENV=PRODUCTION APP_HOST=0.0.0.0 APP_PORT=8886 node index.js",
    "start-debug": "NODE_ENV=DEVELOPMENT DEBUG=koa* ./node_modules/nodemon/bin/nodemon.js --debug index.js",
    "start-debug-brk": "NODE_ENV=DEVELOPMENT DEBUG=koa* APP_HOST=0.0.0.0 APP_PORT=8886 ./node_modules/nodemon/bin/nodemon.js --debug-brk index.js",
    "test": "npm run migrate-seed && npm run unit && npm run smokeTest",
    "unit": "PROJECT_ROOT=$PWD gulp unit",
    "validate": "gulp lint"
  }
}
